<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="10.0"
            Margin="2"
            >

            <Label
                x:Name="NameBox"
                Text="Bill"
                SemanticProperties.Description="" />
            <Entry x:Name="entry"
                Placeholder="EnterAmount"
                Keyboard="Numeric"
                Text="0"
                   />

            <HorizontalStackLayout
                >
                <Label
                    x:Name="TipBox"
                    Text="Tip"      
                    Margin="0,0,10,0"
                    Padding="4"
                    />

                <Label
                    x:Name="TipValue"
                    Text="0.00"
                    SemanticProperties.Description=""
                    Margin="0,0,10,0"
                    Padding="4"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                >
            <Label
                x:Name="TotalBox"
                Text="Total"
                SemanticProperties.Description="" 
                Margin="0,0,10,0"
                Padding="4"
                />

            <Label
                x:Name="TotalValue"
                Text="0.00" 
                SemanticProperties.Description="" 
                Margin="0,0,10,0"
                Padding="4"
                />  

            </HorizontalStackLayout>
            <HorizontalStackLayout>
            <Label
                x:Name="TipPercentageBox"
                Text="Tip Percentage"
                SemanticProperties.Description=""
                Margin="0,0,10,0"
                Padding="4"  
                />

            <Label
                x:Name="TipPercentageValue"
                Text="15%"
                SemanticProperties.Description=""
                Margin="0,0,10,0"
                Padding="4" 
                
                />
            </HorizontalStackLayout>
            <Slider 
                x:Name="Slider"
                Minimum="0"
                Maximum="100"
                ValueChanged="Slider_ValueChanged"
                Margin="0,0,10,0"
                />
            
            <HorizontalStackLayout>
                <Button
                x:Name="Button15Percentage"
                Text="15%" 
                SemanticProperties.Hint=""
                HorizontalOptions="Fill" 
                Clicked="OnButton15Percentage_Clicked"
                Margin="10.0"
                />
                <Button
                
                x:Name="Button20Percentage"
                Text="20%" 
                SemanticProperties.Hint=""
                HorizontalOptions="Fill" 
                Clicked="OnButton20Percentage_Clicked"
                Margin="10.0"
                />
            </HorizontalStackLayout>
            <HorizontalStackLayout
                >
            <Button
                x:Name="RoundDownButton"
                Text="Round Down" 
                SemanticProperties.Hint=""
                HorizontalOptions="FillAndExpand" 
                Clicked="OnRoundDownButton_Clicked"
                Margin="10.0"
                />
            <Button
                x:Name="RoundUpButton"
                Text="Round Up" 
                SemanticProperties.Hint=""
                HorizontalOptions="FillAndExpand" 
                Margin="10.0"
                Clicked="RoundUpButton_Clicked"
                />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
